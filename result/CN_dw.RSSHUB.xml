            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60255090/%E6%96%B0%E5%86%A0%E8%82%BA%E7%82%8E%E4%B8%8D%E9%A1%BE%E4%B8%96%E5%8D%AB%E5%91%BC%E5%90%81%E5%BE%B7%E5%9B%BD%E6%B3%95%E5%9B%BD%E4%BB%A5%E8%89%B2%E5%88%97%E5%B0%86%E5%AE%89%E6%8E%92%E6%8E%A5%E7%A7%8D%E5%8A%A0%E5%BC%BA%E5%89%82</guid>
