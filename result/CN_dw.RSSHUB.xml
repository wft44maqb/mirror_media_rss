            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60256231/%E6%97%A5%E6%9C%AC%E5%A5%B3%E9%97%B4%E8%B0%8D%E5%9C%A8%E5%8D%8E%E5%88%91%E6%BB%A1%E9%87%8A%E6%94%BE%E4%B8%AD%E5%9B%BD%E5%B7%B2%E6%8B%98%E7%95%99%E6%AD%A4%E7%B1%BB%E6%97%A5%E6%9C%AC%E9%97%B4%E8%B0%8D15%E4%BA%BA</guid>
