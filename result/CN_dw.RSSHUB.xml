            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60257793/%E4%B9%8C%E5%85%8B%E5%85%B0%E6%AD%A6%E8%A3%85%E9%83%A8%E9%98%9F%E6%80%BB%E5%8F%B8%E4%BB%A4%E5%86%9B%E9%98%9F%E5%BF%85%E9%A1%BB%E5%81%9A%E5%A5%BD%E8%BF%9B%E6%94%BB%E5%87%86%E5%A4%87</guid>
