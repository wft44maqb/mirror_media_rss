            <guid isPermaLink="false">https://www.dwnews.com/%E7%BB%8F%E6%B5%8E/60257811/%E7%BE%8E%E5%9B%BD%E5%AD%98%E5%A4%9F%E7%99%BE%E4%B8%87%E7%BE%8E%E5%85%83%E9%80%80%E4%BC%91%E9%87%91%E4%BA%BA%E6%95%B0%E5%88%9B%E5%8E%86%E5%8F%B2%E6%96%B0%E9%AB%98</guid>
