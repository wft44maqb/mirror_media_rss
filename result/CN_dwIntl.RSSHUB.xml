            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60257001/%E9%98%BF%E5%AF%8C%E6%B1%97%E5%89%8D%E6%80%BB%E7%BB%9F%E5%8D%A1%E5%B0%94%E6%89%8E%E4%BC%8A%E5%B0%86%E4%B8%8E%E5%A1%94%E5%88%A9%E7%8F%AD%E7%BB%84%E7%BB%87%E9%A2%86%E5%AF%BC%E4%BA%BA%E8%BF%9B%E8%A1%8C%E4%BC%9A%E8%B0%88</guid>
