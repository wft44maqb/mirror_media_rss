            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60255581/%E6%B3%95%E5%9B%BD%E6%96%B0%E8%A7%84%E5%85%A5%E9%A4%90%E5%8E%85%E4%B8%8A%E7%81%AB%E8%BD%A6%E9%9C%80%E6%8C%81%E5%81%A5%E5%BA%B7%E9%80%9A%E8%A1%8C%E8%AF%81%E6%9C%80%E5%B0%91%E6%8C%81%E7%BB%AD%E8%87%B311%E6%9C%88</guid>
