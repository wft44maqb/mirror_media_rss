            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60255611/%E8%81%94%E5%90%88%E5%9B%BD%E6%B0%94%E5%80%99%E6%8A%A5%E5%91%8A%E5%85%A8%E7%90%83%E5%8D%87%E6%B8%A9%E5%B7%B2%E6%97%A0%E6%B3%95%E9%81%BF%E5%85%8D%E6%9E%81%E7%AB%AF%E5%A4%A9%E6%B0%94%E5%B0%86%E5%A4%A7%E5%B9%85%E5%A2%9E%E5%8A%A0</guid>
