            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60258757/%E9%9F%A9%E7%BE%8E%E8%81%94%E5%90%88%E5%86%9B%E6%BC%94%E7%BB%93%E6%9D%9F%E7%BE%8E%E5%86%9B%E5%9F%BA%E5%9C%B0%E5%87%BA%E7%8E%B030%E5%A4%9A%E4%BE%8B%E5%8F%82%E6%BC%94%E4%BA%BA%E5%91%98%E7%A1%AE%E8%AF%8A%E7%97%85%E4%BE%8B</guid>
