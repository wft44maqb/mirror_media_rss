            <guid isPermaLink="false">https://www.dwnews.com/%E5%8F%B0%E6%B9%BE/60258714/%E6%97%A5%E6%9C%AC%E8%87%AA%E6%B0%91%E5%85%9A%E4%B8%8E%E5%8F%B0%E6%B9%BE%E6%B0%91%E8%BF%9B%E5%85%9A%E4%B8%BE%E8%A1%8C%E6%94%BF%E7%AD%96%E4%BA%A4%E6%B5%81%E4%BC%9A%E5%8C%97%E4%BA%AC%E6%8F%90%E5%87%BA%E4%B8%A5%E6%AD%A3%E4%BA%A4%E6%B6%89</guid>
