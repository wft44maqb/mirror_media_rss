            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60255978/%E7%BE%8E%E5%AA%92%E6%97%A5%E6%96%B9%E5%A5%A5%E8%BF%90%E6%9C%9F%E9%97%B4%E6%95%85%E6%84%8F%E9%9A%90%E7%9E%92%E6%8B%89%E5%A7%86%E8%BE%BE%E6%AF%92%E6%A0%AA%E6%84%9F%E6%9F%93%E7%97%85%E4%BE%8B</guid>
