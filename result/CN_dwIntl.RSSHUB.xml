            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60257693/%E6%96%B0%E5%86%A0%E8%82%BA%E7%82%8E%E4%B8%A8%E5%8D%B0%E5%BA%A6%E6%89%B9%E5%87%86%E4%BD%BF%E7%94%A8%E5%85%A8%E7%90%83%E9%A6%96%E6%AC%BEDNA%E7%96%AB%E8%8B%97%E5%8E%82%E5%95%86%E7%A7%B0%E5%AF%B9%E5%BE%B7%E5%B0%94%E5%A1%94%E6%9C%89%E6%95%88</guid>
