            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60254863/%E6%96%B0%E5%86%A0%E8%82%BA%E7%82%8E%E6%97%A5%E6%9C%AC%E6%96%B0%E5%A2%9E%E7%97%85%E4%BE%8B%E7%A0%B4%E4%B8%87%E5%88%B7%E6%96%B0%E6%9C%80%E9%AB%98%E7%BA%AA%E5%BD%95</guid>
