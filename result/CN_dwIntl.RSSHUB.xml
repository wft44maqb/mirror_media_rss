            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60258211/%E9%98%BF%E5%AF%8C%E6%B1%97%E5%B1%80%E5%8A%BFG7%E5%8F%91%E8%A1%A8%E8%81%94%E5%90%88%E5%A3%B0%E6%98%8E%E5%91%BC%E5%90%81%E5%90%84%E6%96%B9%E5%86%B7%E9%9D%99%E4%B8%8E%E5%85%8B%E5%88%B6</guid>
