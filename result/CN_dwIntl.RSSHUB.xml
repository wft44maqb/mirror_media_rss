            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60255129/%E7%90%83%E7%8E%8B%E6%A2%85%E8%A5%BF%E4%B8%8E%E5%B7%B4%E8%90%A8%E6%AD%A3%E5%BC%8F%E5%88%86%E6%89%8B%E4%B8%80%E4%BA%BA%E7%A6%BB%E5%8E%BB%E5%BC%95%E7%88%86%E4%B8%96%E7%95%8C%E8%B6%B3%E5%9D%9B%E5%9C%B0%E9%9C%87</guid>
