            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60258791/%E8%84%B1%E5%8C%97%E8%80%85%E6%B1%82%E5%81%BF%E6%9C%9D%E9%B2%9C%E6%88%90%E4%B8%BA%E8%A2%AB%E5%91%8A%E6%97%A5%E6%9C%AC%E6%B3%95%E9%99%A2%E8%A6%81%E6%B1%82%E9%87%91%E6%AD%A3%E6%81%A9%E4%BD%9C%E4%B8%BA%E4%BB%A3%E8%A1%A8%E5%87%BA%E5%BA%AD</guid>
