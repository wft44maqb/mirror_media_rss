            <guid isPermaLink="false">https://www.dwnews.com/%E5%8F%B0%E6%B9%BE/60257135/%E5%9B%BD%E6%B0%91%E5%85%9A%E4%B8%BB%E5%B8%AD%E4%B9%8B%E4%BA%89%E6%B1%9F%E5%90%AF%E8%87%A3%E8%87%AA%E5%8A%A9%E4%BA%BA%E5%8A%A9%E4%B8%AD%E5%8D%8E%E6%B0%91%E5%9B%BD%E7%BB%9D%E4%B8%8D%E6%98%AF%E9%98%BF%E5%AF%8C%E6%B1%97</guid>
