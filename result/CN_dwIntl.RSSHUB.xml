            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60256237/%E6%97%A5%E5%8A%A0%E5%A4%96%E9%95%BF%E9%80%9A%E8%AF%9D%E8%B0%88%E5%8F%8A%E5%8A%A0%E6%8B%BF%E5%A4%A7%E5%85%AC%E6%B0%91%E5%9C%A8%E5%8D%8E%E8%A2%AB%E5%88%A4%E5%88%91</guid>
