            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60258859/%E6%96%B0%E5%86%A0%E8%82%BA%E7%82%8E%E7%96%AB%E6%83%85%E6%BE%B3%E5%A4%A7%E5%88%A9%E4%BA%9A%E5%A2%9E%E9%80%BE%E5%8D%83%E7%A1%AE%E8%AF%8A%E5%86%8D%E5%88%9B%E6%96%B0%E9%AB%98%E6%97%A5%E6%9C%AC%E6%8B%9F%E5%BB%BA%E4%B8%B4%E6%97%B6%E5%8C%BB%E9%99%A2</guid>
