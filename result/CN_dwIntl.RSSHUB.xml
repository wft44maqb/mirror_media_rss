            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60255616/%E7%BA%BD%E7%BA%A6%E5%B7%9E%E9%95%BF%E7%A7%91%E8%8E%AB%E6%80%A7%E4%BE%B5%E6%A1%88%E6%88%96%E9%9D%A2%E4%B8%B4%E5%BC%B9%E5%8A%BE%E7%A7%98%E4%B9%A6%E6%B6%89%E5%8A%A9%E7%BA%A3%E4%B8%BA%E8%99%90%E8%BE%9E%E8%81%8C</guid>
