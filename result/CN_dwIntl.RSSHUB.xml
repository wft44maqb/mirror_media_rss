            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60255308/%E7%8E%8B%E6%AF%85%E5%8F%82%E5%8A%A0%E4%B8%9C%E7%9B%9F%E5%9C%B0%E5%8C%BA%E8%AE%BA%E5%9D%9B%E5%A4%96%E9%95%BF%E4%BC%9A%E5%91%BC%E5%90%81%E7%BC%93%E8%A7%A3%E5%88%B6%E8%A3%81%E6%9C%9D%E9%B2%9C</guid>
