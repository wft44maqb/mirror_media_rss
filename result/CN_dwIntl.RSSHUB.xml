            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60257413/%E6%8B%BF%E7%BE%8E%E6%8F%B4%E5%86%9B%E7%81%AB%E8%80%80%E6%AD%A6%E6%89%AC%E5%A8%81%E5%A1%94%E5%88%A9%E7%8F%AD%E8%AE%A9%E7%BE%8E%E5%9B%BD%E5%A5%BD%E9%9A%BE%E5%A0%AA%E8%A7%86%E9%A2%91</guid>
