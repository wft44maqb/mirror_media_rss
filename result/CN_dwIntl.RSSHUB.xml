            <guid isPermaLink="false">https://www.dwnews.com/%E5%85%A8%E7%90%83/60255347/%E8%81%94%E5%90%88%E5%9B%BD%E6%9C%BA%E5%AF%86%E6%8A%A5%E5%91%8A%E6%9C%9D%E9%B2%9C%E7%BB%A7%E7%BB%AD%E5%8F%91%E5%B1%95%E6%A0%B8%E8%AE%A1%E5%88%92</guid>
